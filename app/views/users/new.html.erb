<h1>Signup</h1>

<%= form_for :user, url: '/users' do |f| %>
  <p><%= f.text_field :name, :placeholder => "Name" %></p>
  <p><%= f.text_field :email, :placeholder => "Email" %></p>
  <p><%= f.password_field :password, :placeholder => "Password" %></p>
  <p><%= f.password_field :password_confirmation, :placeholder => "Password (again)" %></p>
  <p><%= f.submit "Submit" %></p>
<% end %>